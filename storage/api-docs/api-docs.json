                    },
                    "statut": {
                        "description": "Statut du compte: actif (par défaut), bloqué ou fermé",
                        "type": "string",
                        "enum": [
                            "actif",
                            "bloque",
                            "ferme"
                        ]
                    },
                    "client_id": {
                        "description": "UUID du client propriétaire du compte",
