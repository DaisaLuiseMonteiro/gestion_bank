                        "format": "date-time"
                    },
                    "created_at": {
                        "description": "Date de création",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Dernière mise à jour",
                        "type": "string",
                        "format": "date-time"
                    },
                    "deleted_at": {
                        "description": "Date de suppression logique",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        }
