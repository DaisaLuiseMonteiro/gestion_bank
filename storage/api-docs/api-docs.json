                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Compte marqué comme supprimé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
